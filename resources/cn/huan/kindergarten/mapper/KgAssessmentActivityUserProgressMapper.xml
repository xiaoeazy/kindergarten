<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.huan.kindergarten.mapper.KgAssessmentActivityUserProgressMapper">
    <resultMap id="BaseResultMap" type="cn.huan.kindergarten.dto.KgAssessmentActivityUserProgress">
        <result column="progress_id" property="progress_id" jdbcType="DECIMAL" />
        <result column="assessment_activity_id" property="assessmentActivityId" jdbcType="DECIMAL" />
        <result column="upload_user_id" property="uploadUserId" jdbcType="DECIMAL" />
        <result column="admin_suggestion" property="adminSuggestion" jdbcType="VARCHAR" />
        <result column="expert_user_id" property="expertUserId" jdbcType="DECIMAL" />
        <result column="expert_suggestion" property="expertSuggestion" jdbcType="VARCHAR" />
        <result column="state" property="state" jdbcType="VARCHAR" />
    </resultMap>
    
     <resultMap  id="OtherResultMap" type="cn.huan.kindergarten.dto.KgAssessmentActivityUserProgress">
        <result column="id" property="id" jdbcType="DECIMAL" />
        <result column="assessment_type_id" property="assessmentTypeId" jdbcType="DECIMAL" />
        <result column="assessment_activity_name" property="assessmentActivityName" jdbcType="VARCHAR" />
        <result column="assessment_activity_content" property="assessmentActivityContent" jdbcType="VARCHAR" />
          <result column="createDate" property="createdate" jdbcType="DATE" />
        <association property="kgAssessmentActivity" javaType="cn.huan.kindergarten.dto.KgAssessmentActivity">
            <id column="assessment_type_id" property="id"></id>
            <result column="assessment_type_name" property="assessmentTypeName"/>
        </association>
    </resultMap>

	 <select id="selectWithOtherInfo" resultMap="OtherResultMap" parameterType="cn.huan.kindergarten.dto.KgNews">
        select a.*,b.assessment_type_name from kg_assessment_activity_user_progress a left join kg_assessment_type b
            on a.assessment_type_id=b.id 
           <where>
           		<if test="assessmentActivityName != null">
           			AND a.assessment_activity_name  like CONCAT('%',#{assessmentActivityName},'%') 
           		</if>
           		<if test="assessmentTypeId != null">
           			AND a.assessment_type_id = #{assessmentTypeId}
           		</if>
           </where>
           ORDER BY a.createDate DESC
    </select>
    
   <select id="adminQueryCount" resultType="java.lang.Integer" parameterType="cn.huan.kindergarten.dto.KgAssessmentActivityUserProgress">
        select count(1) from kg_assessment_activity a
           <where>
           		<if test="assessmentActivityName != null">
           			AND a.assessment_activity_name  like CONCAT('%',#{assessmentActivityName},'%') 
           		</if>
           		<if test="assessmentTypeId != null">
           			AND a.assessment_type_id = #{assessmentTypeId}
           		</if>
           </where>
    </select>

</mapper>